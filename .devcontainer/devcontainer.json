{
  "name": "intention-test-dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "features": {},
  "remoteUser": "vscode",
  "containerEnv": {
    "PYTHONUNBUFFERED": "1"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  },
  "forwardPorts": [8080],
  "postCreateCommand": "pip install -r backend/requirements.txt && npm ci",
  "mounts": [
    "source=${localEnv:HOME}/.cache/pip,target=/home/vscode/.cache/pip,type=bind,consistency=cached"
  ]
}

{
  "name": "Intention Test Dev Container",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10"
    },
    "ghcr.io/devcontainers/features/java:1": {
      "version": "temurin-8"
    },
    "ghcr.io/devcontainers/features/maven:1": {
      "version": "3.9"
    }
  },
  "remoteUser": "vscode",
  "postCreateCommand": "pip install -r backend/requirements.txt && npm ci"
}
