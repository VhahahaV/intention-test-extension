{
  "name": "intention-test-vscode",
  "displayName": "intention-test-vscode",
  "description": "An LLM-enhanced Java test generator.",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:java"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "intentionTest.show",
        "category": "IntentionTest",
        "title": "Show Simple Webview"
      },
      {
        "command": "intentionTest.generateTest",
        "category": "IntentionTest",
        "title": "Generate Test"
      },
      {
        "command": "intentionTest.changeJunitVersion",
        "category": "IntentionTest",
        "title": "Change JUnit Version"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "testerView",
          "title": "Intention Test",
          "icon": "resources/test-tube.svg"
        }
      ]
    },
    "views": {
      "testerView": [
        {
          "type": "webview",
          "id": "testView.sidebar",
          "name": "Intention Test"
        }
      ]
    },
    "configuration": {
      "title": "IntentionTest",
      "properties": {
        "intentionTest.port": {
          "type": "number",
          "default": 8080,
          "description": "Localhost port to connect to."
        }
      }
    },
    "icons": {
      "test-tube": {
        "description": "Test tube icon",
        "default": {
          "fontPath": "resources/icon.woff",
          "fontCharacter": "\\0041"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "marked": "^14.0.0",
    "tree-sitter": "^0.21.1",
    "tree-sitter-java": "^0.21.0",
    "tree-sitter-python": "^0.21.0"
  }
}
